---
import Layout from "../layouts/Layout.astro";

interface LinkInterface {
  url: string;
  text: string;
  isInternalLink?: boolean;
}

// @todo: add order prop for manual sorting
const links: LinkInterface[] = [
  {
    url: "/",
    text: "My Website",
    isInternalLink: true,
  },
  {
    url: "https://twitter.com/timuism",
    text: "Twitter",
  },
  {
    url: "https://instagram.com/timuism",
    text: "Instagram",
  },
  {
    url: "https://www.youtube.com/channel/UCVCY5V1UVF8NtaIOV0ye3vQ",
    text: "YouTube",
  },
  {
    url: "https://linkedin.com/in/timuism",
    text: "LinkedIn",
    isInternalLink: true,
  },
];
---

<Layout title="Links | timuism | the online home of timothy long">
  <article class="font-medium">
    <h2 class="text-lg text-gray-500 font-sans mt-12">Links</h2>
    <section class="flex flex-col items-start space-y-6 mt-8">
      {
        links.map((link) => (
          <a
            href={link.url}
            class="
            outline-none ring-offset-4 ring-offset-transparent
            text-4xl font-display
            focus:ring-2 focus:ring-white/25
            duration-200
          "
            target={link.isInternalLink ? "_self" : "_blank"}
          >
            {link.text}
          </a>
        ))
      }
    </section>
  </article>
</Layout>
