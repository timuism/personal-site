---
import Link from '../components/Link.astro';
import '../../assets/app.css'
import '../../assets/fonts/barlow-v12-latin/barlow.css'
import MeHeader from '../../assets/images/me-header.jpg'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="flex flex-col min-h-screen font-sans bg-chineseviolet bg-black max-w-screen-md mx-auto text-white">
    <main class="pt-12 grow flex-1 flex flex-col items-center">
      <header class="px-4">
        <h1 class="text-2xl font-display font-bold italic tracking-wider text-secondary">
          <a href="/" class="mb-0 w-[100px] h-[100px] inline-block rounded-full overflow-hidden border-2 border-transparent hover:animate-pulse hover:border-secondary hover:rotate-12 duration-200">
            <img src={MeHeader} alt="Photo of Tim Long" class="object-cover" />
          </a>
        </h1>
      </header>

      <section class="w-full min-w-[320px] mt-12 p-12 border-t-2 border-secondary">
        <slot />
      </section>
    </main>
	</body>
</html>

<style is:global>
  .longform-p {
    max-width: 480px;
  }
</style>