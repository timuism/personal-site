---
import Link from '../components/Link.astro'
import NavLink from '../components/NavLink.astro'
import '../../assets/app.css'
import "@fontsource/courier-prime"
import '../../assets/fonts/barlow-v12-latin/barlow.css'
import MeHeader from '../../assets/images/me-header.jpg'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="font-serif antialiased bg-gray-900 max-w-screen-lg mx-auto mb-32 text-gray-100">
    <main class="md:pt-12 flex flex-col items-start justify-center">
      <nav class="w-full mt-12 md:mt-4 border-b border-gray-100/5 px-12 md:px-0">
        <h1 class="text-2xl text-white font-display font-normal tracking-tight leading-snug">
          Timothy Long 
        </h1>

        <ul class="flex space-x-8 py-4">
          <li><NavLink href="/blog">Blog</NavLink></li>
          <li><NavLink href="/projects">Projects</NavLink></li>
          <li><NavLink href="/work-history">Work History</NavLink></li>
        </ul>
      </nav>

      <section class="grow w-full min-w-[320px] md:max-w-[640px] p-12 md:pb-0 md:px-0">
        <slot />
      </section>
    </main>

	</body>
</html>

<style is:global>
  .longform-p {
    max-width: 480px;
  }
</style>